{
  "manifest_version": 3,
  "name": "Fake News Detector",
  "version": "1.0.0",
  "description": "Fact-check claims on any page and highlight suspicious sentences.",
  "action": {
    "default_title": "Fake News Detector",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
   "background": {
      "scripts": [
        "background.js"
      ]
    },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://fake-news-detection-n9cs.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "fakenewsdetector-unique-2025@atharv.dev",
    "strict_min_version": "140.0",
    "data_collection_permissions": {
      "required": ["none"]
    }
  }
},
  "author": "Atharv",
  "homepage_url": "https://fake-news-detection-psbo.vercel.app/"
}
